<div class="page_container">
  <div class="food-recipe-container">
    <h3 class="page_title"> Edit Ingredient</h3>
    <table class="table">
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
      <tr>
        <td><%= @recipe_food.food.name %></td>
        <td><%= @recipe_food.food.measurement_unit %></td>
        <td>$ <%= @recipe_food.food.price %></td>
        <td>
          <%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe,@recipe_food)  do |f| %>
            <%= f.number_field :quantity, value: @recipe_food.quantity %>
            <%= f.submit "Modify", class:"btn btn-warning btn-sm" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
